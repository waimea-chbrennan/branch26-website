{% extends 'pages/base.jinja' %}


{% block title %}

    Nelson Amateur Radio Club

{% endblock %}


{% block content %}

    <h1>Nelson Amateur Radio Club</h1>
    <h2>We are a vibrant amateur radio community with over 60 members in Nelson, NZ!</h2>

    <div>
        {% for activity in activities %}
            <article>
                <h3>{{activity.title}}</h3>
                <p>{{activity.description}}</p>
                <p>{{activity.location}}</p>
                <p>Starts: {{activity.start_time}}</p>
                <p>Ends: {{activity.end_time}}</p>

                <p>Posted By: {{activity.posted_by}}</p>

            </article>
        {% endfor %}
    </div>
   

    

{% endblock %}

