{% extends 'pages/base.jinja' %}


{% block title %}

    Nelson Amateur Radio Club

{% endblock %}


{% block content %}

    <section class="hero-section">
        <img src="static/images/sylvester_antenna.jpeg" alt="Wide shot of antenna setup at Lake Sylvester">
    
        <div class="hero-text">
            <h1>Nelson Amateur Radio Club</h1>
            <p>We are a vibrant amateur radio community with over 60 members in Nelson, NZ!</p>
        </div>
       
    </section>

    
    <section class="split-row">
        <div>
            <h2>Upcoming Events</h2>
            {% for activity in activities %}
            <article class="accent-article">
                <h3>{{ activity.title }}</h3>
                <p>{{ activity.description }}</p>
                <p>Location: <strong>{{ activity.location }}</strong></p>
                
                <p>Starts: <strong>
                {{ activity.start_time | localday }},
                {{ activity.start_time | localdate }} at
                {{ activity.start_time | localtime }}
                </strong></p>

                <p>Ends: <strong>
                {{ activity.end_time | localday }},
                {{ activity.end_time | localdate }} at
                {{ activity.end_time | localtime }}
                </strong></p>
                
                {% if activity.resource_title %} 
                <p>Attached Resource: <a href="{{activity.resource_url}}">{{activity.resource_title}}</a></p>  
                {% endif %}

            </article>
            {% endfor %}
        </div>

        <div class="what-we-do">
            <h2>What we do</h2>
            <img src="static/images/tent_banner.jpg" alt="Radio tent with Nelson radio banner on it">
            <p>We meet regularly and do cool stuff like...
                Not yet a member but want to become involved in amateur radio? We can help you get your license and join our club!</p>
            <a href="/contact" role="button">Join Us</a>
        </div>
    
    </section>
    
   

    

{% endblock %}

